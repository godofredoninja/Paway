<article class="relative flex items-center justify-center flex-col min-h-screen text-center bg-dark">
    {{#if feature_image}}
    <a class="" href="{{url}}">
        <img class="inset-image lazyload brightness-50"
            src="{{img_url feature_image size="m"}}"
            srcset="{{img_url feature_image size="xxs"}}"
            data-srcset="{{img_url feature_image size="s"}} 300w,
                    {{img_url feature_image size="m"}} 600w,
                    {{img_url feature_image size="l"}} 1000w,
                    {{img_url feature_image size="xl"}} 2000w"
            data-sizes="(max-width: 1000px) 400px, 700px"
            alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
        />
    </a>
    {{/if}}

    <div class="relative z-2 max-w-3xl mx-auto px-4 py-vw6">
        {{#if primary_tag}}{{#primary_tag}}
        <div class="cat-links uppercase mb-4 text-lg tracking-wider font-bold leading-normal">
            <a href="{{url}}" title="{{name}}" class="cat-links-item text-white inline-block border-white border-b-3 border-opacity-25">{{name}}</a>
        </div>
        {{/primary_tag}}{{/if}}

        <h2 class="story-title text-white mb-4 leading-tight text-5xl md:text-7xl"><a href="{{url}}">{{title}}</a></h2>

        {{!-- Author Meta partials/components/author-meta.hbs --}}
        {{> "components/author-meta" class="text-xl text-white text-opacity-90" classLink="hover:text-white"}}
</article>