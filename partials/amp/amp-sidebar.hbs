        <div class="text-lg">{{t "Menu"}}</div>
        <div class="close-sidebar" role="button" aria-label="close sidebar" on="tap:sidenav.close" tabindex="0">âœ•</div>
    </div>

    {{!-- Navigation --}}
    <div class="flex-auto">
        {{#if @site.navigation}}{{navigation navigationMobile=true}}{{/if}}
    </div>

    {{!-- Social media --}}
    <div class="social-media px-4">
        {{#if @site.facebook}}
            <a href="{{facebook_url}}" target="_blank" rel="noopener noreferrer">{{> "amp/icon-facebook"}}</a>
        {{/if}}

        {{#if @site.twitter}}
            <a href="{{twitter_url}}" target="_blank" rel="noopener noreferrer">{{> "amp/icon-twitter"}}</a>
