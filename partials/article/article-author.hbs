{{#primary_author}}
<div class="post-author py-vmin8 text-center">
    {{!-- avatar --}}
    <img class="post-author-avatar inline-block mb-4 h-24 w-24 rounded-full"
        src="{{#if profile_image}}{{img_url profile_image size="s"}}{{else}}{{asset "images/avatar.png"}}{{/if}}"
        alt="{{t "Go to the profile of "}} {{name}}"/>
    {{!-- Name --}}
    <h2 class="post-author-name text-3xl">{{name}}</h2>
    {{!-- bio --}}
    {{#if bio}}<p class="post-author-bio my-6">{{bio}}</p>{{/if}}
    {{!-- Facebook - Twitter - Webpage --}}
    {{#has any="twitter, facebook, website"}}
    <div class="post-author-meta">
        <ul class="uppercase text-xs space-x-2 font-medium tracking-wider">
            <li class="inline-block text-gray-500">{{t "follow me"}}</li>
            {{#if facebook}}<li class="inline-block"><a class="post-author-meta-link border-b border-gray-300" href="{{facebook_url}}" title="Facebook" target="_blank" rel="noopener noreferrer">Facebook</a></li>{{/if}}
            {{#if twitter}}<li class="inline-block"><a class="post-author-meta-link border-b border-gray-300" href="{{twitter_url}}" title="Twitter" target="_blank" rel="noopener noreferrer">Twitter</a></li>{{/if}}
            {{#if website}}<li class="inline-block"><a class="post-author-meta-link border-b border-gray-300" href="{{website}}" title="Website" target="_blank" rel="noopener noreferrer">Website</a></li>{{/if}}
        </ul>
    </div>
    {{/has}}

</div>
{{/primary_author}}
