<div class="prev-next-item relative overflow-hidden text-center flex items-center justify-center {{#if class}}{{class}}{{/if}}">
    <a class="prev-next-link flex-grow" href="{{url}}">
        {{#if feature_image}}
        <img class="story-img inset-image blur-up lazyload"
            src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
            data-srcset="{{img_url feature_image size="s"}} 300w,
                    {{img_url feature_image size="m"}} 600w,
                    {{img_url feature_image size="l"}} 1000w,
                    {{img_url feature_image size="xl"}} 2000w"
            data-sizes="auto"
            alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
        />
        {{/if}}

        <div class="prev-next-body relative z-3 text-white">
            <span class="uppercase mb-4 text-sm tracking-wider font-bold leading-normal inline-block border-white border-b-3 border-opacity-25">{{mytitle}}</span>
            <h2 class="prev-next-title text-3xl font-title md:text-4xl">{{title}}</h2>
        </div>
    </a>
</div>